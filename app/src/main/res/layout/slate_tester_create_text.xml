<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/b_cl_create_text"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:maxWidth="450dp"
    android:background="@android:color/white"
    android:paddingHorizontal="8dp"
    android:paddingBottom="36dp">

    <TextView
        android:id="@+id/b_ct_tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        tools:text="@tools:sample/lorem"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        app:layout_constraintEnd_toStartOf="@+id/b_ct_iv_save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/b_ct_iv_save"
        android:layout_height="48dp"
        android:layout_width="48dp"
        android:contentDescription="@string/sample_save"
        android:padding="12dp"
        android:src="@drawable/ic_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/b_ct_tv_name"
        app:layout_constraintBottom_toBottomOf="@+id/b_ct_tv_name"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/b_ct_et_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@null"
        android:inputType="textCapSentences"
        android:lineHeight="48dp"
        android:maxLines="1"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_ct_tv_name"
        tools:hint="@tools:sample/lorem" />

    <TextView
        android:id="@+id/b_ct_tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:paddingHorizontal="8dp"
        tools:text="@tools:sample/lorem"
        android:gravity="end"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/b_ct_et_name"
        />
</androidx.constraintlayout.widget.ConstraintLayout>